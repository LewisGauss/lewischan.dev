# top-most EditorConfig file
root = true
end_of_line = lf

# Matches multiple files with brace expansion notation
# Set default charset
[*.js]
charset = utf-8
indent_size = 4
indent_style = space

[*.json]
indent_style = space
indent_size = 4
trim_trailing_whitespace = true

[*.css]
indent_style = space
indent_size = 2
trim_trailing_whitespace = true

[src/**/*.js]
insert_final_newline = true
trim_trailing_whitespace = true
